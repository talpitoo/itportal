<script>
    document.addEventListener('DOMContentLoaded', function () {
        const numberOfUsers = document.getElementById('numberOfUsers');
        const checkCloudVsOnPremises = document.getElementById('checkCloudVsOnPremises');
        const pricePlans = document.querySelectorAll('.price-plan');

        function filterPlans() {
            const selectedUsers = numberOfUsers.value;
            const isOnPremises = checkCloudVsOnPremises.checked
                ? 'on-premises'
                : 'cloud';

            pricePlans.forEach(plan => {
                const planUsers = plan.dataset.users;
                const planType = plan.dataset.type;
                const isUnavailable = plan.dataset.unavailable !== undefined;

                if (planType === isOnPremises) {
                    if (isOnPremises === 'on-premises') {
                        if (parseInt(selectedUsers) < 5 && isUnavailable) {
                            plan.style.display = 'block';
                        } else if (parseInt(selectedUsers) >= 5 && matchesUserRange(selectedUsers, planUsers)) {
                            plan.style.display = 'block';
                        } else {
                            plan.style.display = 'none';
                        }
                    } else { // cloud plans
                        plan.style.display = matchesUserRange(selectedUsers, planUsers)
                            ? 'block'
                            : 'none';
                    }
                } else {
                    plan.style.display = 'none';
                }
            });
        }

        function matchesUserRange(selected, planUsers) {
            if (selected === planUsers) 
                return true;
            if (selected === '5' && planUsers === '4') 
                return true;
            if (selected === '10' && planUsers === '10') 
                return true;
            if (selected === '25' && planUsers === '25') 
                return true;
            return false;
        }

        numberOfUsers.addEventListener('change', filterPlans);
        checkCloudVsOnPremises.addEventListener('change', filterPlans);

        // Initial filtering
        filterPlans();
    });
</script>